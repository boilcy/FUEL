<launch>
  <!-- size of map, change the size in x, y, z according to your application -->
  <arg name="map_size_x" value="50.0"/>
  <arg name="map_size_y" value="50.0"/>
  <arg name="map_size_z" value="10.0"/>

  <arg name="init_x" value="0"/>
  <arg name="init_y" value="0"/>
  <arg name="init_z" value="0.0"/> 

  <!-- topic of your odometry such as VIO or LIO -->
  <!-- <arg name="odom_topic" value="/airsim_node/PX4/odom_local_ned" /> -->
  <arg name="odom_topic" value="/mavros/local_position/odom" />

  <!-- main algorithm params -->
  <include file="$(find exploration_manager)/launch/algorithmairsim.xml">
    <arg name="map_size_x_" value="$(arg map_size_x)"/>
    <arg name="map_size_y_" value="$(arg map_size_y)"/>
    <arg name="map_size_z_" value="$(arg map_size_z)"/>

    <arg name="box_min_x" value="-25.0"/>
    <arg name="box_min_y" value="-25.0"/>
    <arg name="box_min_z" value="-1.0"/>
    <arg name="box_max_x" value="25.0"/>
    <arg name="box_max_y" value="25.0"/>
    <arg name="box_max_z" value="9.0"/>

    <arg name="odometry_topic" value="$(arg odom_topic)"/>
    <!-- sensor pose: transform of camera frame in the world frame -->
    <arg name="sensor_pose_topic" value="/mavros/local_position/odom"/>
    <!-- depth topic: depth image, 640x480 by default -->
    <!-- cloud topic: point cloud measurement  -->
    <!-- subscribe ONLY TO ONE of the two topics -->
    <arg name="depth_topic" value="/airsim_node/PX4/camera_1/DepthPerspective"/>
    <!-- <arg name="cloud_topic" value="/airsim_node/Drone_1/lidar/lidar_1"/> -->
    <arg name="cloud_topic" value="empty"/>

    <!-- intrinsic params of the depth camera -->
    <arg name="cx" value="320.0"/>
    <arg name="cy" value="240.0"/>
    <arg name="fx" value="320.0"/>
    <arg name="fy" value="320.0"/>

    <!-- maximum velocity and acceleration the drone will reach -->
    <arg name="max_vel" value="2.0" />
    <arg name="max_acc" value="2.0" />
  </include>
</launch>
